{
  "name": "token-price-service",
  "version": "1.0.0",
  "description": "A token price service with intentional anti-patterns and bugs for educational purposes",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "jest --config test/jest.config.ts",
    "test:unit": "jest --config test/jest.config.ts --testPathPattern=test/unit",
    "test:integration": "jest --config test/jest.config.ts --testPathPattern=test/integration --testTimeout=120000",
    "test:watch": "jest --config test/jest.config.ts --watch",
    "test:cov": "jest --config test/jest.config.ts --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config test/jest.config.ts --runInBand",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/data/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "npm run typeorm -- migration:run -d src/data/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/data/data-source.ts",
    "db:seed": "ts-node -r tsconfig-paths/register scripts/seed.ts",
    "prepare": "husky install",
    "docker:build": "docker build --target production -t token-price-service:latest .",
    "docker:build:dev": "docker build --target development -t token-price-service:dev .",
    "docker:build:prod": "docker build --target production -t token-price-service:prod ."
  },
  "keywords": [
    "nestjs",
    "typescript",
    "kafka",
    "postgresql",
    "typeorm"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "dotenv": "^17.2.3",
    "jest-stare": "^2.5.3",
    "kafkajs": "^2.2.4",
    "p-all": "^5.0.1",
    "pg": "^8.11.0",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.16",
    "typeorm-naming-strategies": "^4.1.0",
    "zod": "^3.25.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "find-open-port": "^2.0.3",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^16.2.4",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "testcontainers": "^10.0.1",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run type-check"
    }
  }
}
